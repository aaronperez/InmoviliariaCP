<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_inmobiliaria</item>
        <item name="popupMenuStyle">@style/PopupMenu.Inmobiliaria</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Inmobiliaria</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Inmobiliaria</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Inmobiliaria</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Inmobiliaria</item>
        <item name="actionModeBackground">@drawable/cab_background_top_inmobiliaria</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_inmobiliaria</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Inmobiliaria</item>

        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Inmobiliaria.Widget</item>

    </style>

    <style name="ActionBar.Solid.Inmobiliaria" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_inmobiliaria</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_inmobiliaria</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_inmobiliaria</item>
        <item name="progressBarStyle">@style/ProgressBar.Inmobiliaria</item>
    </style>

    <style name="ActionBar.Transparent.Inmobiliaria" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_inmobiliaria</item>
        <item name="progressBarStyle">@style/ProgressBar.Inmobiliaria</item>
    </style>

    <style name="PopupMenu.Inmobiliaria" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_inmobiliaria</item>
    </style>

    <style name="DropDownListView.Inmobiliaria" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_inmobiliaria</item>
    </style>

    <style name="ActionBarTabStyle.Inmobiliaria" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_inmobiliaria</item>
    </style>

    <style name="DropDownNav.Inmobiliaria" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_inmobiliaria</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_inmobiliaria</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_inmobiliaria</item>
    </style>

    <style name="ProgressBar.Inmobiliaria" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_inmobiliaria</item>
    </style>

    <style name="ActionButton.CloseMode.Inmobiliaria" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_inmobiliaria</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Inmobiliaria.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Inmobiliaria</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Inmobiliaria</item>
    </style>

</resources>